<div class="container">
  <div class="row justify-content-center py-4">
    <h3>ジャンル編集</h3>
  </div>

  <%= form_with model: @genre,url: admin_genre_path, local:true ,class: "row justify-content-center " do |f| %>
    <div class="form-group row col-9 pt-4">
      <%= f.label :"ジャンル名", class: "col-form-label col-sm-2 ml-4" %>

      <%=f.text_field :name, autofocus: true, class: "col-sm-3"  %>

      <%= f.submit "変更を更新" , class: 'btn btn-success offset-1' %>
    </div>
  <% end %>

</div>