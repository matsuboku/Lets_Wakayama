<div class="container">
  <div class="row py-4">
    <h3><%= @user.name %>さんのユーザ情報編集</h3>
  </div>
  <%= form_with model: @user,url: admin_user_path(@user.id),  local:true ,method: :patch do |f| %>
  <div class="form-group row">
    <%= f.label :"ユーザID", class: "col-sm-2 col-form-label" %><%= @user.id %>
  </div>
  <div class="form-group row">
    <%= f.label :"ユーザ名", class: "col-sm-2 col-form-label" %>
    <%= f.text_field  :name, autofocus: true, class: "col-lg-2" %>
  </div>
  <div class="form-group row">
    <%= f.label :"メールアドレス", class: "col-sm-2  col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
  </div>
  <div class="form-group row">
    <%= f.label "ステータス", class: "col-sm-2  col-form-label" %>
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :is_deleted, "有効", class: "col-lg-1" %>
    <%= f.radio_button :is_deleted, :true %>
    <%= f.label :is_deleted, "退会", class: "col-lg-1" %>
  </div>
  <div class="row py-4">
    <%= f.submit "編集内容を保存" , class: 'btn btn-success col-lg-2 ' %>
  </div>
  <% end %>
</div>