<div class="container">
  <div class="row justify-content-center py-4">
    <h3><%= @user.name %>さんのユーザ情報編集</h3>
  </div>

  <%= form_with model: @user,url: admin_user_path(@user.id),  local:true ,method: :patch do |f| %>
  <div class="form-group row">
    <%= f.label :"ユーザID", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= @user.id %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :"ユーザ名", class: "col-sm-2 col-form-label" %>
    <%= f.text_field  :name, autofocus: true, class: "col-sm-2" %>
  </div>

  <div class="form-group row">
    <%= f.label :"メールアドレス", class: "col-sm-2  col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3" %>
  </div>

  <div class="form-group row">
    <%= f.label "ステータス", class: "col-sm-2  col-form-label" %>
    <div class="col-sm-1">
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :is_deleted, "有効" %>
    </div>
    <div class="col-sm-1">
    <%= f.radio_button :is_deleted, :true %>
    <%= f.label :is_deleted, "退会" %>
    </div>
  </div>

  <div class="row py-4">
    <%= f.submit "編集内容を保存" , class: 'btn btn-success col-lg-2 mx-2 my-1' %>
    <%= link_to "戻る" , admin_user_path(@user), class: 'btn btn-primary col-lg-2 mx-2 my-1' %>
  </div>
  <% end %>
</div>