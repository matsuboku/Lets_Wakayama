  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto pt-4">
    		<h3>投稿を編集</h3>
        <%= form_with model: @post, local:true do |f| %>
          <div class="form-group">
            <%= f.label :"画像" %>
            <%= f.file_field :image, accept: "image/*" %>
          </div>

          <div class="form-group">
            <%= f.label :"タイトル" %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :"説明" %>
            <%= f.text_area :explanation, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :"ジャンル" %>
            <%= f.select :genre_id,  options_from_collection_for_select(Genre.all, :id, :name) %>
          </div>

          <div class="form-group">
            <%= f.submit "投稿",  class: 'btn btn-success' %>
          </div>
        <% end %>

    		<%= link_to 'Show', @post %> |
    		<%= link_to 'Back', posts_path, class: "back" %>
    	</div>
    </div>
  </div>