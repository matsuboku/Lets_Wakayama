  <div class="row ml-3">
    <div class="card-list col-5">
      <% @posts.each do |posts| %>
      <div class="card w-100 my-4 shadow-lg">
        <%= link_to post_path(posts.id) do %>
          <%= image_tag posts.get_image(100,100), class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <%= image_tag posts.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-10">
              <p class="card-title">
                <%= link_to(post_path(posts.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= posts.title %></span></strong>
                <% end %>
              </p>
              <p class="card-text">説明：<%= posts.explanation %></p>
              <p class="card-text">ジャンル：<%= posts.genre.name %></p>
              <span><i class="fas fa-user"></i> By <%= posts.user.name %> ｜ </span>
              <!--<span><%#= link_to "#{posts.post_comments.count} コメント", post_path(posts.id), class:"text-dark" %></span>-->
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-7"></div>
  </div>
