  <div class="row ml-3">
    <div class="card-list col-lg-3 col-md-5">
      <% @posts.each do |post| %>
      <div class="card w-100 my-4 shadow-lg">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image(100,100), class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-3">
              <%= image_tag post.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-9">
              <p class="card-title">
                <%= link_to(post_path(post.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
                <% end %>
              </p>
              <p class="card-text">説明：<%= post.explanation %></p>
              <p class="card-text">ジャンル：<%= post.genre.name %></p>
              <p><i class="fas fa-user"></i> By<%= link_to user_path(post.user) ,class: "text-dark" do %><%= post.user.name %><% end %></p>
              <span id="comment_count"><%= render 'public/post_comments/comment_count', post: post %> | </span>
              <span class="favorites_buttons_<%= post.id %>"><%= render 'public/favorites/favorite', post: post %></span>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-9"></div>
  </div>
