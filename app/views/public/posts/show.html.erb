    <div class="card-list col-4">
      <div class="card w-100 my-4 shadow-lg">
        <%= link_to post_path(@post.id) do %>
          <%= image_tag @post.get_image(100,100), class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <%= image_tag @post.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-10">
              <p class="card-title">
                <%= link_to(post_path(@post.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= @post.title %></span></strong>
                <% end %>
              </p>
              <p class="card-text">説明：<%= @post.explanation %></p>
              <p class="card-text">ジャンル：<%= @post.genre.name %></p>
              <span><i class="fas fa-user"></i> By<%= link_to users_my_page_path ,class: "text-dark" do %><%= @post.user.name %><% end %> ｜ </span>
              <!--<span><%#= link_to "#{posts.post_comments.count} コメント", post_path(posts.id), class:"text-dark" %></span>-->
              <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>