    <div class="d-flex flex-wrap">
      <% posts.each do |posts| %>
      <div class=" col-3 flex-wrap ">
        <%= link_to post_path(posts.id) do %>
          <%= image_tag posts.get_image(200,200), class:"card-img-top"; %>
        <% end %>

        <div class="card-body">
          <p class="card-title">
            <%= link_to(post_path(posts.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= posts.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= posts.explanation %></p>
          <p class="card-text">ジャンル：<%= posts.genre.name %></p>
          <span id="comment_count"><%= render 'public/post_comments/comment_count', post: posts %> | </span>
          <span class="favorites_buttons_<%= posts.id %>"><%= render 'public/favorites/favorite', post: posts %></span>
        </div>

      </div>
      <% end %>

    </div>