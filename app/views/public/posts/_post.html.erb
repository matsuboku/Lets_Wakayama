    <div class="card-group">
      <% posts.each do |posts| %>
      <div class="card my-4 mx-2">
        <%= link_to post_path(posts.id) do %>
          <%= image_tag posts.get_image(100,100), class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
          <div class="col-8">
              <p class="card-title">
                <%= link_to(post_path(posts.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= posts.title %></span></strong>
                <% end %>
              </p>
              <p class="card-text">説明：<%= posts.explanation %></p>
              <p class="card-text">ジャンル：<%= posts.genre.name %></p>
          </div>
          <div class="col-4">
            <%# if post.user == current_user %>
            <td><%#= link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-success" %></td>
            <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <%# else %>
            <td></td>
            <td></td>
            <%# end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>

