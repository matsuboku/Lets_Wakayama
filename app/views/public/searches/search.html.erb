<div class="container">
  <div class="row">
    <h2 class="py-4">検索結果</h2>

    <table class="table table-hover table-inverse text-center">
      <% if params[:word].present? %>
      <!--検索対象モデルがUserの時 -->
      <% if @range == "User" %>
        <thead>
          <tr>
            <th>Image</th>
            <th>ユーザ名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>説明</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= image_tag post.user.get_profile_image(50,50) %></td>
              <td><%= post.title %></td>
              <td><%= post.explanation %></td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
      <% end %>
    </table>
  </div>
</div>